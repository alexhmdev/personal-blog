---
interface Props {
  title: string;
  textGradient?: boolean;
  size?: 'h1' | 'h2' | 'h3';
}
const sizes = {
  h1: 'text-6xl md:text-8xl',
  h2: 'text-4xl md:text-6xl',
  h3: 'text-2xl md:text-3xl',
};

const { title, textGradient, size } = Astro.props;
---

<h1
  class={`${sizes[size] ?? 'text-6xl md:text-8xl'} ${
    textGradient &&
    'py-4 font-extrabold text-transparent bg-clip-text bg-gradient-to-r from-blue-400 to-light-primary dark:from-primary dark:to-pink-900'
  }`}
>
  {title}
</h1>
