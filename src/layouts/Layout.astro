---
import logo from "../assets/logos/logoRED.svg";
import Navigation from "../components/Navigation.astro";
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/logoRED.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="bg-dark text-light grid justify-center">
    <div class="flex items-center gap-2 mt-3 cursor-pointer">
      <div>
        <img src={logo} alt="logo" class="w-12" />
      </div>
      <div>
        <h1 class="text-2xl font-bold">AlexHM</h1>
      </div>
    </div>
    <div class="flex items-center gap-2 text-primary">
      <Navigation />
    </div>
    <slot />
  </body>
</html>
